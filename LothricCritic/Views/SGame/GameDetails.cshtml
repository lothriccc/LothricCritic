@model IEnumerable< EntityLayer.Concrete.Game>
@{
	ViewData["Title"] = "GameDetails";
	Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<section class="banner-bottom">
	<!--/blog-->
	<div class="container">
		<div class="row">
			<!--left-->
			@foreach (var item in Model)
			{


				<div class="col-lg-9 left-blog-info-w3layouts-agileits text-left">

					<div class="blog-grid-top">
						<div class="b-grid-top">
							<div class="blog_info_left_grid">
								<a href="single.html">
									<p><img src="@item.BigImageUrl" style="width:960px;height:540px;"></p>
								</a>
							</div>
							<div class="blog-info-middle">
								<ul>
									<li>
										<a href="#">
											<i class="far fa-calendar-alt"></i> @(((DateTime)item.ReleaseDate).ToString("dd-MMM-yyyy"))
										</a>
									</li>
									<li class="mx-2">
										<a href="#">
											<i class="far fa-thumbs-up"></i> @item.CompanyID
										</a>
									</li>
									<li>
										<a href="#">
											<i class="far fa-comment"></i> @ViewBag.commentcount
										</a>
									</li>

								</ul>
							</div>
						</div>

						<h3>
							<a href="single.html">@item.Name </a>
						</h3>
						<p>
							@item.Description
						</p>

					</div>
					@* @await Component.InvokeAsync("CategoryList", new { gameId = ViewBag.i})   *@
					<div class="comment-top">
						<h4>Yorumlar</h4>
						@await Component.InvokeAsync("CommentList", new {id =ViewBag.i})
						@await Html.PartialAsync("~/Views/SComment/PartialAddComment.cshtml",new { id = ViewBag.i })
					</div>
				</div>
			}
			<!--//left-->
			<!--right-->
			<!--//right-->
		</div>
	</div>
</section>
