@using EntityLayer.Concrete
@model List<Game>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<section class="main-content-w3layouts-agileits">
	<div class="container">
		<h3 class="tittle">Oyunlar</h3>
		<div class="inner-sec">
			<!--left-->
			<div class="left-blog-info-w3layouts-agileits text-left">
				<div class="row">
					@foreach (var item in Model)
					{
						<div class="col-lg-4 card">
							<a href="single.html">
								<p><img src="@item.ImageUrl" style="width:300px;height:300px;"></p>
							</a>
							<div class="card-body">
								<ul class="blog-icons my-4">
									<li>
										<a href="#">
											<i class="far fa-calendar-alt"></i>@(((DateTime)item.ReleaseDate).ToString("dd-MMM-yyyy"))
										</a>
										<a href="#">
											<i class="far fa-comment"></i> @item.Company.CompanyName
										</a>
									</li>
									@* <li class="mx-2">
										<a href="#">
											<i class="far fa-comment"></i> @item.Company.CompanyName
										</a>
									</li> *@

								</ul>
								<p class="card-text mb-3">@item.Description.Substring(0,item.Description.Substring(0,130).LastIndexOf(" "))...</p>
								<h5 class="card-title">
									<a href="single.html">@item.Name</a>
								</h5>
								@* <p class="card-text mb-3">@item.Company.CompanyName</p> *@
								<a href="/Sgame/GameDetails/@item.GameID" class="btn btn-primary read-m">Okumaya Devam Et</a>
							</div>
						</div>
					}
