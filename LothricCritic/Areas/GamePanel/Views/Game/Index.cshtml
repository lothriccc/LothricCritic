@using EntityLayer.Concrete
@model List<Game>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Game List</h4>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Şirket İsmi</th>
                            <th>Oyun İsmi</th>
                            <th>Oyun Açıklaması</th>
                            <th>Çıkış Tarihi</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.GameID</td>

                                <td>@item.Company.CompanyName</td>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td>@item.ReleaseDate</td>
                                <td><a href="/GamePanel/Game/DeleteGame/@item.GameID" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/GamePanel/Game/EditGame/@item.GameID" class="btn btn-outline-primary">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href="/GamePanel/Game/AddGame/" class="btn btn-outline-primary">Oyun Ekle</a>
            </div>
        </div>
    </div>
</div>

