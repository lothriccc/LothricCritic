@model EntityLayer.Concrete.Game

@{
	ViewData["Title"] = "AddGame";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Yeni Oyun Girişi</h4>
			<form class="forms-sample" method="post">
				
				@Html.Label("Şirket Adı")
				<br />
				<br />
				@Html.DropDownListFor(x=>x.CompanyID,(List<SelectListItem>)ViewBag.v, new {@class="form-control"})
				<br />
				<div class="form-group">
					<label for="exampleInputName1">Oyun İsmi</label>
					<span asp-validation-for="Name" class="text-danger"></span>
					<input type="text" class="form-control" id="exampleInputName1"  asp-for="Name">
				</div>
				<div class="form-group">
					<label for="exampleInputName1">Oyun Açıklaması</label>
					<span asp-validation-for="Description" class="text-danger"></span>
					<textarea cols="30" rows="5" asp-for="Description" class="form-control"></textarea>
				</div>
				<div class="form-group">
					<label for="exampleInputName1">Çıkış Tarihi</label>
					<span asp-validation-for="ReleaseDate" class="text-danger"></span>
					<input type="text" class="form-control" id="exampleInputName1"  asp-for="ReleaseDate">
				</div>
				<div class="form-group">
					<label for="exampleInputName1">Görsel Linki</label>
					<span asp-validation-for="ImageUrl" class="text-danger"></span>
					<input type="text" class="form-control" id="exampleInputName1" asp-for="ImageUrl">
				</div>
				<button type="submit" class="btn btn-primary me-2">Kaydet</button>
			</form>
		</div>
	</div>
</div>




