@model EntityLayer.Concrete.PlatformGame
@{
    ViewData["Title"] = "EditPlatformGame";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">PlatformGame Düzenleme Sayfası</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Platform</label>
                    <input type="text" class="form-control" asp-for="PlatformID" id="exampleInputName1">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Oyun</label>
                    <input type="text" class="form-control" asp-for="GameID" id="exampleInputName1">
                </div>
                <button type="submit" class="btn btn-primary me-2">Kaydet</button>
            </form>
        </div>
    </div>
</div>

