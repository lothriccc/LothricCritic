@model EntityLayer.Concrete.Company
@{
    ViewData["Title"] = "AddCompany";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Şirket Girişi</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Şirket İsmi</label>
                    <span asp-validation-for="CompanyName" class="text-danger"></span>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Şirket İsmi Giriniz" asp-for="CompanyName">
                </div>
                <button type="submit" class="btn btn-primary me-2">Kaydet</button>
            </form>
        </div>
    </div>
</div>


