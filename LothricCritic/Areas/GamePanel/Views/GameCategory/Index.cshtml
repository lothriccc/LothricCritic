@using EntityLayer.Concrete
@model List<GameCategory>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">GameCategory List</h4>

            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Kategori ID</th>
                            <th>Oyun ID</th>
                            @*  <th>Sil</th>
                            <th>Güncelle</th>*@
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Category.CategoryName</td>
                                <td>@item.Game.Name</td>
                                @*<td><a href="/GamePanel/PlatformGame/DeletePlatformGame/@item.PlatformID" class="btn btn-outline-danger">Sil</a></td>
                            <td><a href="/GamePanel/PlatformGame/EditPlatformGame/@item.PlatformID" class="btn btn-outline-primary">Güncelle</a></td>*@
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href="/GamePanel/GameCategory/AddGameCategory/" class="btn btn-outline-primary">Kategori ile Oyunu Birleştir</a>
            </div>
        </div>
    </div>
</div>



